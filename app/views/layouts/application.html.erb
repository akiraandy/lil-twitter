<!DOCTYPE html>
<html>
  <head>
    <title>LilTwitter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav>
        <ul>
          <li><%= link_to "Lil Twitter", root_path %></li>
          <li><%= link_to "New Tweet", new_tweet_path%></li>
          <li>
            <%= link_to "Global Tweets", all_tweets_path %>
          </li>
            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to('Login', new_user_session_path) %>
            </li>
            <% end %>

          </ul>
        </div>
      </nav>
      <div class="row text-center">
        <div class="col">
          <p class="notice"><strong><%= notice %></strong></p>
          <p class="alert"><strong><%= alert %></strong></p>
        </div>
      </div>

      <%= yield %>
    </div>

  </body>
</html>
